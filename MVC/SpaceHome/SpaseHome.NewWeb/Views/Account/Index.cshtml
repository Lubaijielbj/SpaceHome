
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SpaceHome-登录</title>
    <link href="~/Content/account.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/plugin/layer/layer.js"></script>
    <script src="~/Scripts/account/Login.js"></script>
</head>
<body>
    <div>
        <div class="bg">
            @* 登录 *@
            <div id="login" class="login">
                <div class="login-title">
                    <p style="font-size:20px">账号和密码登录</p>
                    <p style="margin:10px;">推荐使用<a href="javascript:;">快速登录</a></p>
                </div>
                <div class="loginfrom">
                    <div class="textbox">
                        <input class="inputtext" type="text" placeholder="账号/手机号登录" />
                    </div>
                    <div class="textbox">
                        <input class="inputtext" type="password" placeholder="输入密码" />
                    </div>
                    <div class="check">
                        <input type="checkbox" style="margin-right:5px" />
                        <span>记住密码</span>
                    </div>
                    <div class="textbox">
                        <input class="loginbtn" type="button" value="登录" />
                    </div>
                </div>
                <div class="login-bottom">
                    <div class="login-bottom-left"></div>
                    <div class="login-bottom-right">
                        <ul>
                            <li>
                                <a href="javascript:;">忘记密码？</a>
                            </li>
                            <li>
                                <span>|</span>
                            </li>
                            <li>
                                <a href="javascript:register();">注册新账号</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            @* 注册 *@
            <div id="register" class="register">
                <div class="login-title">
                    <p style="font-size:20px">账号注册</p>                    
                </div>
                <div class="registerfrom">
                    <div class="textbox">
                        <input id="regusername" class="inputtext" type="text" placeholder="用户名" onchange="test();"/>
                    </div>
                    <div class="textbox">
                        <input id="regpwd" class="inputtext" type="password" placeholder="密码" />
                    </div>
                    <div class="textbox">
                        <input id="reguserphone" class="inputtext" type="tel" placeholder="手机号" />
                    </div>
                    <div class="textbox">
                        <input id="regverifycode" class="verifycode" type="tel" placeholder="验证码" />
                        <button id="regverifybtn" class="verifybtn">发送验证码</button>
                    </div>
                    <div class="check">
                        <input id="regcheckbox" type="checkbox" style="margin-right:5px"/>
                        <span>已阅读并同意<a href="javascript:;">《用户协议》</a></span>
                    </div>
                    <div class="textbox">
                        <input id="regsendbtn" class="loginbtn" type="button" value="登录" onclick="close();"/>
                    </div>
                </div>
                <div class="login-bottom">
                    <div class="login-bottom-left"></div>
                    <div class="login-bottom-right">
                        <ul>
                            <li>
                                <a href="javascript:;">忘记密码？</a>
                            </li>
                            <li>
                                <span>|</span>
                            </li>
                            <li>
                                <a href="javascript:login();">登录</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
